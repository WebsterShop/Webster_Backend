<div class="row">
    <div class="col-sm-12">
        <img {{bind-attr src="categoryImage"}} alt="...">
    </div>
</div>
{{#each productsGrid}}
    <div class="row">
        {{#each this}}
            <div class="col-sm-3">
                <div class="thumbnail">
                    <img {{bind-attr src="image"}} alt="...">
                    <div class="caption">
                        <h3>{{#link-to 'catalog.product' this}}{{name}}{{/link-to}}</h3>
                        <p>{{description}}</p>
                        <div class="price-box"><p class="lead">{{price}} &euro;</p></div>
                        <p>{{inventory}} pieces available</p>
                        <p>
                            <a href="#" class="btn btn-primary" role="button">Kaufen</a>
                        </p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}